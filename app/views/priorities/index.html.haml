.widget
  .widget-header.transparent
    %h2
      %strong Priority
      Table
    .additional-btn
      %a.hidden.reload{:href => "#"}
        %i.icon-ccw-1
  .widget-content
    .data-table-toolbar
      .row
        .col-md-1
          .toolbar-btn-action
            = link_to " Add new", new_priority_path, class: "a btn btn-success i fa fa-plus-circle"
    .table-responsive
      = render partial: "table", locals: {priorities: @priorities}
