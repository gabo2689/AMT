.widget
  .widget-header.transparent
    %h2
      %strong Factor Selected
      Table

    .additional-btn
      %a.hidden.reload{:href => "#"}
        %i.icon-ccw-1
  .widget-content
    .data-table-toolbar
      .row
        .col-md-1
          .toolbar-btn-action
            = link_to " Back", factors_path, class: "btn btn-primary", :style => "height: 34px;padding-top: 6px;"
    .table-responsive
      = render partial: "table", locals: {factors: @factor}


  .widget-header.transparent
    %h2
      %strong Technology for Factor Selected
      Table
    .additional-btn
      %a.hidden.reload{:href => "#"}
        %i.icon-ccw-1
  .widget-content
    .table-responsive
      = form_for @factor do |f|
        %table{"data-sortable" => "", "data-sortable-initialized" => "true"}
          %tr
            %th Title
            %th Weight
          = f.fields_for :technologies do |order|
            %tr
              %td= order.text_field :title, readonly: true
              %td= order.text_field :description, readonly: true
